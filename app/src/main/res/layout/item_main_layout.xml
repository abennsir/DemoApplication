<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_movie_picture"
        android:layout_width="80dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/item_movie_picture"
        android:layout_toEndOf="@+id/item_movie_picture"
        android:layout_toRightOf="@+id/item_movie_picture"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_movie_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#c4c4c4"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="article 1" />

        <TextView
            android:id="@+id/item_movie_txt_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8b8b8b"
            android:textSize="14sp"
            tools:text="date article" />

        <TextView
            android:id="@+id/item_movie_txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8b8b8b"
            android:textSize="14sp"
            tools:text="date article" />
    </LinearLayout>
</RelativeLayout>